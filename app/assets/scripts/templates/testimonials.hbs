{{#each this}}
  <li class="testimonial {{#ifShown @index}}active{{/ifShown}}">
    <div class="testimonial__intro">
      <img class="testimonial__img" src="{{this.img}}">
      <div class="testimonial__intro-text">
        <h3 class="testimonial__name">{{this.firstName}} {{this.lastName}}</h3>
        <h4 class="testimonial__mission">{{this.mission}}</h4>
        <h5 class="testimonial__time">{{this.month}}, {{this.year}}</h5>
      </div>
    </div>
    <div class="testimonial__story">
      <h2 class="testimonial__title">{{this.title}}</h2>
      <p class="testimonial__text">{{this.story}}</p>
    </div>
  </li>
{{/each}}